{
  "extends": ["next/core-web-vitals", "next/typescript", "plugin:prettier/recommended"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "printWidth": 120,
        "useTabs": false,
        "tabWidth": 2,
        "trailingComma": "es5",
        "semi": true,
        "singleQuote": true,
        "bracketSpacing": true,
        "arrowParens": "always",
        "jsxSingleQuote": false,
        "bracketSameLine": false,
        "endOfLine": "crlf"
      },
      {
        "usePrettierrc": false
      }
    ],
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "warn",  
    "@typescript-eslint/no-empty-object-type": "off"
  }
}
